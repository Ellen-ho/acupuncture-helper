<h5 class="text-center mt-5">Patient's record Lists</h5>
<form action="/patients/{{ patient._id }}/recordList" method="GET">
<div class="container mt-4">
  <div class="row justify-content-center">
    <h4 class="name font-weight-bold">
      {{ patient.name }}
    </h4>
  </div>
<ul class="list-group record-list mt-2">
  {{#each updatedRecords}}
  <li class="list-group-item">
    <div class="row justify-content-between">
      <div class="col-lg-4 name-date">
        <div class="date">
          {{ this.date }}
        </div>
      </div>
      <div class="col-lg-2 d-flex justify-content-center align-items-center">
        <div class="startAt">
          {{ this.formattedStartAt }}
        </div>
      </div>
      <div class="col-lg-1 d-flex justify-content-center align-items-center">
        <span>~</span>
      </div>
      <div class="col-lg-2 d-flex justify-content-center align-items-center">
        <div class="endAt">
          {{ this.formattedEndAt }}
        </div>
      </div>
      <div class="col-lg-3 d-flex justify-content-center align-items-center">
        <a class="btn btn-outline-success font-weight-bold" href="/records/{{ this._id }}">Details</a>
        <form action="/records/{{ this._id }}?_method=DELETE" method="POST"
          onsubmit="return confirm('Are you sure you want to delete?')" style="display: inline;">
          <button class="btn btn-danger ml-1" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
</div>