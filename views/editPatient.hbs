<h5 class="text-center mt-5">Edit Patient's information</h5>

<div class="container d-flex justify-content-start align-items-center" style="margin-top: 20px; margin-bottom: 10px; padding: 0;">
  <a href="/patients/list" class="btn btn-link">
    <i class="fas fa-arrow-left"></i> Back to Patient List
  </a>
</div>

<form action="/patients/{{patient._id}}?_method=PUT" method="POST" class="container" style="margin-top: 10px;">
  <div class="column">
    <div class="text-danger">*required</div>
      <div class="form-group mt-2">
        <label for="name">Full Name<span class="text-danger">*</span></label>
        <input type="text" class="form-control" name="name" value="{{patient.name}}" required>
      </div>
      <div class="form-group mt-2">
        <label for="gender">Gender<span class="text-danger">*</span></label>
        <select class="form-control" name="gender">
          {{#select patient.gender}}
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Non-binary">Non-binary</option>
          {{/select}}
        </select>
      </div>
      <div class="form-group mt-3">
        <label for="age">Age<span class="text-danger">*</span></label>
        <input type="text" class="form-control" name="age" value="{{patient.age}}" required>
      </div>
      <div class="form-group mt-2">
        <label for="wardNumber">Ward number<span class="text-danger">*</span></label>
        <input type="text" class="form-control" name="wardNumber" value="{{patient.wardNumber}}"  required>
      </div>
      <div class="form-group mt-2">
        <label for="locationCategory">Location<span class="text-danger">*</span></label>
        <select class="form-control" name="locationCategoryId">
          {{#each locationCategories}}
          <option value="{{this._id}}">
            {{this.locationCategoryName}}
          </option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="text-center">
     <button type="submit" class="btn btn-info">Save</button>
    </div>
</form>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>