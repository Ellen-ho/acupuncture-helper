<h5 class="text-center mt-5">Patient Lists</h5>
<div class="container mt-5">
  <form action="/patients/list" method="GET">
    <ul class="list-group">
      {{#each patients}}
        <li class="list-group-item">
          <div class="row">
            <!-- 左側的文字和圖案部分 -->
            <div class="col-md-6">
              <div class="row">
                <div class="col-lg-12 name-date">
                  <div class="chartNo">
                    No. {{ this.chartNo }}
                  </div>
                </div>
                <div class="col-lg-12 h4 bold">
                  {{#ifEquals this.gender "male"}}
                    <span class="text-primary">
                      <i class="fas fa-mars title-icon"></i>
                      {{this.name}} ({{this.age}}y) 
                    </span>
                  {{else}}
                    <span class="text-danger">
                      <i class="fas fa-venus"></i>
                      {{this.name}} ({{this.age}}y) 
                    </span>
                  {{/ifEquals}}
                </div>
              </div>
            </div>
            <!-- 右側的按鈕部分 -->
            <div class="col-md-6 btn-area">
              <a class="btn btn-outline-success font-weight-bold" href="/patients/{{ this._id }}">Edit</a>
              <a class="btn btn-outline-success font-weight-bold" href="/patients/{{ this._id }}/recordList">Record Lists</a>
              <form action="/patients/{{ this._id }}?_method=DELETE" method="POST"
                onsubmit="return confirm('Are you sure you want to delete?')" style="display: inline;">
                <button class="btn btn-danger" type="submit">Delete</button>
              </form>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </form>
  <div class="text-center mt-4">
    <a href="/patients/new" class="btn btn-info">Add Patient</a>
  </div>
</div>