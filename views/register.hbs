<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{>message}}
      <form action="/users/register" method="POST">
        <div class="text-danger">* required</div>
        <div class="mb-3">
          <label for="name" class="mb-2">Name</label><span class="text-danger">*</span></label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" value="{{name}}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">Email<span class="text-danger">*</span></label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" value="{{email}}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password<span class="text-danger">*</span></label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password"
            value="{{password}}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">ConfirmPassword<span class="text-danger">*</span></label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Enter your password again"
            value="{{confirmPassword}}">
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign up</button>
      </form>
      <p class="lead mt-4">
        Have you already registered? <a href="/users/login">Sign in</a>
      </p>
    </div>
  </div>
</div>